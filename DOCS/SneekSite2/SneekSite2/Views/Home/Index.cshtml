<head id="Head1" runat="server">

    <title>Google Maps Example</title>
   
     <script type="text/javascript" src="http://www.google.com/jsapi?key=AIzaSyBCzZnmPj1oNPw9N584H2jOKIMj-5S4jyM"></script>

     <script type="text/javascript">

      google.load("maps", "2");

      //functie om de API aan te roepen.

      function initialize() {
          //maakt de map aan.
        var map = new google.maps.Map2(document.getElementById("map"));
          // "spawn point" dus de plek waar de map word weergegeven in dit geval boven Nederland, ook word met de 9 aangegeven hoe ver boven het platte land de kaart word weergegeven.
        map.setCenter(new google.maps.LatLng("53.0337476", "5.6589"), 9);
          //De marker op de map met de coördinaten voor Sneek.
        var point = new GPoint("5.6589", "53.0337476");

        var marker = new GMarker(point);

        map.addOverlay(marker);

        map.addControl(new GLargeMapControl());

      }

      google.setOnLoadCallback(initialize);

    </script>

</head>

